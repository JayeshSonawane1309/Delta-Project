<style>
  .btn-search{
    background-color: #fe424d;
    color: white;
    min-width: max-content;
    border-radius: 25px;
    margin: auto;
  }
  .btn-search:hover{
    background-color: #fe424d;
    color: white;
  }
  .search-inp{
    width: max-content;
    padding: 0px 1rem;
    border-radius: 20px;
    background-color: rgb(245, 248, 250);
  }
  @media(min-width:1100px){
    .search-inp {
    width: 420px;   
     }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center gap-1" href="/listings">
      <i class="fa-brands fa-airbnb fs-4"></i>
      <span class="fw-semibold">airbnb</span>
    </a>

    <!-- Toggler -->
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarMain"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav me-3">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <form action="/listings/search" method="GET" class="d-flex mx-md-auto my-2 my-md-0" role="search">
        <input
          class="form-control form-control-sm me-2 search-inp"
           name="q"
          type="search"
          placeholder="Search destinations"
          aria-label="Search"
        />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
          Search
        </button>
      </form>

      <!-- RIGHT LINKS -->
      <ul class="navbar-nav ms-md-auto align-items-md-center">

        <li class="nav-item new-airbnb-nav">
          <a class="nav-link fw-medium" href="/listings/new">
            Airbnb your home
          </a>
        </li>

        <% if(!currentUser){ %>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/signup">Sign up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/login">Login</a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link fw-semibold" href="/logout">Logout</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
