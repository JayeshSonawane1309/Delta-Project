<% layout('layouts/boilerplate') -%>

<div id="filters">
  <a href="/listings?category=trending" class="filter text-center">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </a>

  <a class="filter" href="/listings?category=farm-house" class="filter text-center">
    <i class="fa-solid fa-house-chimney-window"></i>
    <p>Farm-house</p>
  </a>

  <a class="filter" href="/listings?category=iconic-cities" class="filter text-center">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Iconic-cities</p>
  </a>

  <a class="filter" href="/listings?category=rooms" class="filter text-center">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </a>


  <!-- Tax switch -->
  <div class="tax-switch ms-lg-auto mt-2">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" id="switchCheckChecked">
      <label class="form-check-label small" for="switchCheckChecked">
        Display total after taxes
      </label>
    </div>
  </div>
</div>


  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4 mt-1">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="col">
        <div class="card listing-card">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="Listing Image"
            style="height: 20rem" />
          <div class="card-img-overlay"><%= listing.title %></div>
          <div class="card-body">
            <p class="card-text">
              <b> <%= listing.title %></b>
              <br />
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckChecked");
    taxSwitch.addEventListener("click",async()=>{
      let taxInfo=document.getElementsByClassName("tax-info");
      // console.log(taxInfo);
      for(info of taxInfo){
        if(info.style.display!="inline"){
           info.style.display = "inline";
        }else{
           info.style.display = "none";
        }
      }
    })
  </script>