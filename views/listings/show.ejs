<%- layout("layouts/boilerplate") %>

<!-- ================= MAPBOX VARIABLES ================= -->
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  const listingLocation = <%- JSON.stringify(listing.location) %>;
</script>

<div class="container mt-4">

  <!-- ================= TITLE ================= -->
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h3 class="mb-3"><%= listing.title %></h3>
    </div>
  </div>

  <!-- ================= LISTING CARD ================= -->
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card listing-card mb-4">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing-image"
        />

        <div class="card-body">
          <p class="mb-1">
            Owned by <i><%= listing.owner.username %></i>
          </p>
          <p><%= listing.description %></p>
          <p>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
          <p><%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- ================= EDIT / DELETE ================= -->
  <% if (currentUser && currentUser._id.equals(listing.owner._id || listing.owner)) { %>
    <div class="row mb-4">
      <div class="col-md-8 offset-md-2 d-flex gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
          Edit
        </a>

        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <button class="btn btn-outline-danger" type="submit">
            Delete
          </button>
        </form>
      </div>
    </div>
  <% } %>

  <!-- ================= REVIEW FORM ================= -->
  <% if (currentUser) { %>
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h4>Leave a Review</h4>

        <form
          action="/listings/<%= listing._id %>/reviews"
          method="post"
          class="needs-validation"
          novalidate
        >

          <!-- â­ RATING INPUT -->
          <div class="mb-3">
            <label class="form-label">Rating</label>

            <fieldset class="starability-slot">

              <!-- dummy radio (prevents auto-select) -->
              <input
                type="radio"
                name="review[rating]"
                value=""
                checked
                hidden
              />

              <input type="radio" id="rate1" name="review[rating]" value="1" />
              <label for="rate1" title="1 star"></label>

              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2" title="2 stars"></label>

              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3" title="3 stars"></label>

              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4" title="4 stars"></label>

              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5" title="5 stars"></label>

            </fieldset>
          </div>

          <!-- ðŸ’¬ COMMENT -->
          <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea
              class="form-control"
              name="review[comment]"
              rows="3"
              required
            ></textarea>
            <div class="invalid-feedback">
              Please add a comment.
            </div>
          </div>

          <button class="btn btn-outline-dark mb-4" type="submit">
            Submit
          </button>
        </form>
      </div>
    </div>
  <% } %>

  <!-- ================= REVIEWS ================= -->
  <% if (listing.reviews.length > 0) { %>
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h5>All Reviews</h5>

        <div class="row">
          <% for (let review of listing.reviews) { %>
            <div class="col-md-6 mb-3">
              <div class="card review-card">
                <div class="card-body">
                  <h6>@<%= review.author.username %></h6>

                  <!-- â­ DISPLAY RATING -->
                  <p
                    class="starability-result"
                    data-rating="<%= review.rating %>"
                  ></p>

                  <p><%= review.comment %></p>

                  <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                    <form
                      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                      method="post"
                    >
                      <button class="btn btn-sm btn-outline-danger">
                        Delete
                      </button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>

  <!-- ================= MAP ================= -->
  <div class="row mt-4 mb-5">
    <div class="col-md-8 offset-md-2">
      <hr />
      <h3 class="mb-3">Where you'll be</h3>
      <div id="map"></div>
      <button id="backToListing" class="btn btn-outline-dark mt-2">
        Listing Location
      </button>
    </div>
  </div>
</div>

<!-- ================= MAP SCRIPT ================= -->
<script src="/js/map.js"></script>
